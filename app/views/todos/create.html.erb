<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">Create Todo</h1>
      <%= form_tag("/todos/store", method: "post") do %>
      <div class="form-group">
      <%= label_tag("Title") %>
      <%= text_field_tag(:title, nil, class: "form-control")%>
      <p class='error'><%= show_errors(@todo, :title) %></p>
      </div>
      <div class="form-group">
      <%= label_tag("Description") %>
      <%= text_area_tag(:desc, nil, class: "form-control") %>
      <p class='error'><%= show_errors(@todo, :description) %></p>
      </div>
      <div class="form-group">
      <%= label_tag("Completed") %>
      <%= check_box_tag(:completed) %>
      </div>
      <div class="text-center">
      <%= submit_tag("Create Todo", class: "btn btn-success") %>
      </div>
      <% end %>
    </div>
  </div>
</div>